<h1>Edit event</h1>

<form action="/edit-event/{{eventToEdit._id}}" method="POST">

 <label for="title">What will you do? </label>
    <input type="text" id="title" name="title" value="{{eventToEdit.title}}" />

    <label for="location">Where? </label>
    <input type="text" id="location" name="location" value="{{eventToEdit.location}}" />

    <label for="date">When? </label>
    <input type="date" id="time" name="date" value="{{eventToEdit.date}}" />

    <label for="time">Time:</label>
    <input type="time" id="time" name="time" value="{{eventToEdit.time}}">

   <label for="description">Tell us more? </label>
   <input type="text" id="description" name="description" value="{{eventToEdit.description}}" />

   <label for="maxParticipants">How many guests do you accept? </label>
   <input type="number" min="1" id="maxParticipants" name="maxParticipants" value="{{eventToEdit.maxParticipants}}"/>

   <input type="submit" value="Edit Event"></input>

</form>