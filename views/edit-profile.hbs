<div class="d-flex flex-column align-items-center">
    <h1 class="p-3 welcome">Edit profile</h1>

    <div class="auth-card col-lg-6 col-md-12 d-flex flex-column align-items-center">
      <div class="profile-pic-circle mt-3">
        <img src="{{currentUser.picture}}" alt="profile picture" class="profile-picture" >
      </div>
      <form class="form w-100 p-3" action="/edit-profile" method="POST" enctype="multipart/form-data">

        <div class="form-group m-2">
          <label for="username">Username:</label>
          <input type="text" class="form-control" id="username" name="username" value="{{currentUser.username}}" required>
        </div>

        <div class="form-group m-2">
          <label for="email">Email address (public):</label>
          <input class="form-control" type="text" name="email" id="email" value="{{currentUser.email}}">
        </div>

        <div class="form-group m-2">
          <label for="interests">Select your interests:</label>
          <select class="form-control" id="interests" name="interests" value="{{currentUser.interests}}">
            <option>Sports</option>
            <option>Music</option>
            <option>Food</option>
            <option>Travel</option>
            <option>Nightlife</option>
            <option>Tech</option>
            <option>Art</option>
            <option>Concerts</option>
            <option>Reading</option>
            <option>Coffee</option>
          </select>
        </div>

        <div class="form-group m-2">
          <label for="about">Tell us about yourself:</label>
          <input type="text" class="form-control" id="about" name="about" style="margin-bottom: 40px" value="{{currentUser.about}}" required>
        </div>

          <div class="form-group m-2 d-flex justify-content-center">
            <input type="file" name="profileImg" id="profileImg" style="display: none;" />
            <label class=" w-75 btn gray-blue-button" for="profileImg">Update profile picture</label>
          </div>

        <div class="d-flex justify-content-center">
        <button class="btn action-button" type="submit">Save</button>
        </div>

    </div>
    </form>
</div>