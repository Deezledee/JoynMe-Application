<div class="d-flex justify-content-center align-items-center vh-100 vw-100">
    <div class="auth-card p-4 col-lg-6 col-md-12 d-flex flex-column align-items-center">
        <h1 class="p-3">Login</h1>
        <form class="form form w-100 p-3" action="/auth/login" method="POST">
            <div class="form-group">
                <label for="username">Username:</label>
                <input class="form-control" type="text" name="username" id="username">
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <input class="form-control" type="password" name="password" id="password">
            </div>

            <div class="mt-4 d-flex justify-content-center">
                <button class="m-4 btn action-button" type="submit">Login</button>
            </div>
        </form>
        {{#if message}}
            <p class="error">{{message}}</p>
        {{/if}}
    </div>
</div>

