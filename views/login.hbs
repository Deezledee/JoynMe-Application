<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="d-flex flex-column" style="margin-top: -90px; text-align: center;">
        <h1 style="font-weight: bold; font-size: 60px; margin-bottom: 30px">Login</h1>
        <form class="form" action="/auth/login" method="POST">
            <div class="form-group">
                <label for="username" style="font-weight: bold; font-size: 20px; margin-bottom: 20px">Username: </label>
                <input class="form-control" type="text" name="username" id="username" style="margin-bottom: 20px">
            </div>

            <div class="form-group">
                <label for="password" style="font-weight: bold; font-size: 20px; margin-bottom: 20px">Password: </label>
                <input class="form-control" type="password" name="password" id="password" style="margin-bottom: 30px">
            </div>

            <button class="btn btn-primary" type="submit" style="background-color: #F78F20; color: #FFFFFF; font-size: 20px; font-weight: bold">Login</button>
        </form>

        {{#if message}}
            <h3 class="error">{{message}}</h3>
        {{/if}}
    </div>
</div>
