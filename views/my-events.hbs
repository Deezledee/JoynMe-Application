<div class="my-events-container">
  <div class="row px-lg-4">
    <div class="col-lg-6 col-md-12">
      <h1 class="p-4">Hosting:</h1>
    {{#if events}}
    {{#each events}}
      <div class="event-card m-4 p-4">
          <h2 class="event-title">{{this.title}}</h2>
                <p><span class="event-log">Location: </span>{{this.location}}</p>
                <p><span class="event-log">When: </span>{{this.date}}</p>
                <p><span class="event-log">Time: </span>{{this.time}}</p>
                <p><span class="event-log">Plan: </span>{{this.description}}</p>
          {{#if this.participants}}
           <p><span class="event-log">Contact guests: </span>
           {{#each this.participants}}
          {{this.email}}
          {{/each}}
          {{else}}
          <p class="event-log">0 participants for now</p>
          {{/if}}
          </p>
          <div class="d-flex justify-content-center">
            <a href='/edit-event/{{this._id}}' class="btn action-button mx-2">Edit event</a>
            <a href='/delete-event/{{this._id}}' class="btn blue-gray-button mx-2">Cancel event</a>
          </div>
      </div>
    {{/each}} 
    {{else}}
      <p class="p-4">You are not hosting any events soon...</p>
    {{/if}}
    
    </div>
    <div class="col-lg-6 col-md-12">
      <h1 class="p-4">Joining:</h1>

      {{#if participation}}
        {{#each participation}}
          <div class="event-card m-4 p-4 2d-flex justify-content-center align-items-center">
            <div>
                <h2 class="event-title">{{this.title}}</h2>
                <p><span class="event-log">Location: </span>{{this.location}}</p>
                <p><span class="event-log">When: </span>{{this.date}}</p>
                <p><span class="event-log">Time: </span>{{this.time}}</p>
                <p><span class="event-log">Plan: </span>{{this.description}}</p>
                <p><span class="event-log">Contact organizer: </span>{{this.organizer.email}}</p>
                <div class="d-flex justify-content-center">
                  <a href='/cancel/{{this._id}}' class="btn blue-gray-button mx-2">Cancel participation</a>
                </div>
              </div>
            </div>
        {{/each}} 
      {{/if}}

    </div>
  </div>
</div>




