<h1>Events I organize</h1>

{{#each events}}
<div class="card">
  <div class="card-body">
    <h5 class="card-title">{{this.title}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">{{this.location}}</h6>
    <p class="card-text">{{this.description}}</p>
    <p class="card-text"><small class="text-muted">{{this.date}} at {{this.time}}</small></p>
    <a href='/edit-event/{{this._id}}' class="btn btn-primary">Edit event</a>
    <a href='/delete-event/{{this._id}}' class="btn btn-danger">Delete event</a>
  </div>
</div>
{{/each}} 

{{#if participation}}
<h1>Events I joined</h1>
{{#each participation}}
<div class="card">
  <div class="card-body">
    <h5 class="card-title">{{this.title}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">{{this.location}}</h6>
    <p class="card-text">{{this.description}}</p>
    <p class="card-text"><small class="text-muted">{{this.date}} at {{this.time}}</small></p>
  </div>
</div>
{{/each}} 
{{/if}}