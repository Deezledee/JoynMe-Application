<div class="d-flex flex-column align-items-center">
    <h1 class="p-3 welcome">Welcome onboard {{user.username}} ðŸ‘‹</h1>

    <div class="auth-card p-4 col-lg-6 col-md-12 d-flex flex-column align-items-center">

      <h2>Finish setting up your profile:</h2>
      <form class="form w-100 p-3" action="/edit-profile" method="POST" enctype="multipart/form-data">
        <div class="form-group m-2">
          <label for="email">Email address (public):</label>
          <input class="form-control" type="text" name="email" id="email">
        </div>

        <div class="form-group m-2">
          <label for="interests">Select your interests:</label>
          <select class="form-control" id="interests" name="interests">
            <option>Sports</option>
            <option>Music</option>
            <option>Food</option>
            <option>Travel</option>
            <option>Nightlife</option>
            <option>Tech</option>
            <option>Art</option>
            <option>Concerts</option>
            <option>Reading</option>
            <option>Coffee</option>
          </select>
        </div>

        <div class="form-group m-2">
          <label for="about">Tell us about yourself:</label>
          <textarea class="form-control" name="about" id="about" style="height: 100px;"></textarea>
        </div>

        <div class="form-group form-check m-2">

          <input class="form-check-input" type="checkbox" id="termsAccepted" name="termsAccepted" value="true">
          <label class="form-check-label" for="termsAccepted"><a href="/privacy-policy" target="_blank">Terms and Conditions</a></label>
        
        </div>

          <div class="form-group m-2 d-flex justify-content-center">
            <input type="file" name="profileImg" id="profileImg" style="display: none;" />
            <label class=" w-75 btn gray-blue-button" for="profileImg">Upload profile picture</label>
          </div>

        <div class="d-flex justify-content-center">
        <button class="btn action-button" type="submit">Create Profile</button>
        </div>

    </div>
    </form>
</div>

