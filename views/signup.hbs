<div class="d-flex flex-column align-items-center justify-content-center vh-100">
    <div class="auth-card p-4 col-lg-6 col-md-12 d-flex flex-column align-items-center">
      <h1 class="p-3">Sign Up</h1>
      <form class="form w-100 p-3" action="/auth/signup" method="POST">
        <div class="form-group m-2">
            <label for="username">Username:</label>
            <input class="form-control" type="text" name="username" required>
        </div>
        <div class="form-group m-2">
            <label for="password">Password:</label>
            <input class="form-control" type="password" name="password" required>
        </div>

        <div class="mt-4 d-flex justify-content-center">
            <button class="btn action-button" type="submit">Create Profile</button>
        </div>
     </form>

     {{#if message}}
            <h3 class="error">{{message}}</h3>
     {{/if}}

    </div>
</div>



